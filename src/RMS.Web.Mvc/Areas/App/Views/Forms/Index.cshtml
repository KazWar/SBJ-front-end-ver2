@using RMS.Authorization
@using RMS.Web.Areas.App.Models.Forms
@using RMS.Web.Areas.App.Startup
@model FormsViewModel;
@{
    if (ViewBag.Category == RMS.SBJ.Forms.FormConsts.Company)
        ViewBag.CurrentPageName = AppPageNames.Common.CompanyForms;
    else
        ViewBag.CurrentPageName = AppPageNames.Common.Forms;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/Forms/Index.js" asp-append-version="true"></script>
}

@if (ViewBag.Category == RMS.SBJ.Forms.FormConsts.Company)
{
    <div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">
        <div class="kt-subheader kt-grid__item">
            <div class="@(await GetContainerClass())">
                <div class="kt-subheader__main">
                    <h3 class="kt-subheader__title">
                        <span>@L("Forms")</span>
                    </h3>
                    <span class="kt-subheader__separator kt-subheader__separator--v"></span>
                    <span class="kt-subheader__desc">
                        @L("FormsHeaderInfo")
                    </span>
                </div>
                <div class="kt-subheader__toolbar">
                    <div class="kt-subheader__wrapper">
                        <button id="ExportToExcelButton" class="btn btn-outline-success"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>
                        @*@if (IsGranted(AppPermissions.Pages_Forms_Create))
                        {
                            <button id="CreateNewFormLocaleButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewFormLocale")</button>
                        }*@                       
                    </div>
                </div>
                <input id="pageSource" hidden type="text" value="@ViewBag.Category"/>
            </div>
        </div>
        <div class="@(await GetContainerClass()) kt-grid__item kt-grid__item--fluid">
            <div class="row">
                <div class="kt-portlet kt-portlet--mobile">
                    <div class="kt-portlet__body">
                        @if (Model.FormLocale?.Count > 0)
                        {
                            <label>Form Locale</label>
                            <select class="formLocale">
                                <option hidden disabled selected>Select a Form Locale</option>
                                @foreach (var item in Model.FormLocale)
                                {
                                    <option value="@item.FormLocale.Id.ToString()" data-formLocaleId="@item.FormLocale.Id" data-formId="@item.FormLocale.FormId" data-localeId="@item.FormLocale.LocaleId">@item.FormLocale.Description</option>
                                }
                            </select>
                        }
                        else
                        {
                            <lable>No Form Locales yet. Please click on "Create new form locale" button to create one.</lable>
                        }
                    </div>
                </div>
            </div>

            <div id="dvFormLocaleBlock" style="display: none; padding: 15px 0px 0px 0px" />
        </div>
    </div>
}

else
{
    <div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">
        <div class="kt-subheader kt-grid__item">
            <div class="@(await GetContainerClass())">
                <div class="kt-subheader__main">
                    <h3 class="kt-subheader__title">
                        <span>@L("Forms")</span>
                    </h3>
                    <span class="kt-subheader__separator kt-subheader__separator--v"></span>
                    <span class="kt-subheader__desc">
                        @L("FormsHeaderInfo")
                    </span>
                </div>
                <div class="kt-subheader__toolbar">
                    <div class="kt-subheader__wrapper">
                        <button id="ExportToExcelButton" class="btn btn-outline-success"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>
                        @if (IsGranted(AppPermissions.Pages_Forms_Create))
                        {
                            <button id="CreateNewFormButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewForm")</button>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="@(await GetContainerClass()) kt-grid__item kt-grid__item--fluid">
            <div class="kt-portlet kt-portlet--mobile">
                <div class="kt-portlet__body">
                    <div class="kt-form">
                        <div class="row align-items-center mb-4">
                            <div class="col-xl-12">
                                <div class="form-group align-items-center">
                                    <div class="input-group">
                                        <input type="text" id="FormsTableFilter" class="form-control m-input" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                        <span class="input-group-btn">
                                            <button id="GetFormsButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                        <div class="col-md-12">
                            <div class="kt-separator kt-separator--border-dashed"></div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="VersionFilterId">@L("Version")</label>
                                <input type="text" class="form-control" name="versionFilter" id="VersionFilterId">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="SystemLevelDescriptionFilterId">(@L("SystemLevel")) @L("Description")</label>
                                <input type="text" class="form-control" name="systemLevelDescriptionFilter" id="SystemLevelDescriptionFilterId">
                            </div>
                        </div>

                    </div>
                    <div class="row mb-4">
                        <div class="col-xl-12">
                            <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                            <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                        </div>
                    </div>
                    <div class="row align-items-center">
                        <table id="FormsTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                            <thead>
                                <tr>
                                    <th>@L("Actions")</th>
                                    <th>@L("Version")</th>
                                    <th>@L("SystemLevelDescription")</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}