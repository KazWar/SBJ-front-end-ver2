
@using RMS.Web.Areas.App.Models.Common.Modals
@using RMS.Web.Areas.App.Models.CampaignMessages
@model CampaignMessageViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Details")))

<div class="modal-body">
    <div id="CampaignMessageInformationsTab">
        
        <div class="row">
            <div class="col-6 mb-3">
                <h6>@L("IsActive") :</h6>
                @Model.CampaignMessage.IsActive
            </div>

            <div class="col-6 mb-3">
                <h6>(@L("Campaign")) @L("Name") :</h6>
                @Model.CampaignName
            </div>
            <div class="col-6 mb-3">
                <h6>(@L("Message")) @L("Version") :</h6>
                @Model.MessageVersion
            </div>

        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithClose.cshtml")

