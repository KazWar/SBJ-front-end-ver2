
@using RMS.Web.Areas.App.Models.Common.Modals
@using RMS.Web.Areas.App.Models.CampaignCategoryTranslations
@model CampaignCategoryTranslationViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Details")))

<div class="modal-body">
    <div id="CampaignCategoryTranslationInformationsTab">
        
        <div class="row">
            <div class="col-6 mb-3">
                <h6>@L("Name") :</h6>
                @Model.CampaignCategoryTranslation.Name
            </div>

            <div class="col-6 mb-3">
                <h6>(@L("Locale")) @L("Description") :</h6>
                @Model.LocaleDescription
            </div>
            <div class="col-6 mb-3">
                <h6>(@L("CampaignCategory")) @L("Name") :</h6>
                @Model.CampaignCategoryName
            </div>

        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithClose.cshtml")

