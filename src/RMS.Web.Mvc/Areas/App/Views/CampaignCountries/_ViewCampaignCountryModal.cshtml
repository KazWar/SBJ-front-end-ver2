
@using RMS.Web.Areas.App.Models.Common.Modals
@using RMS.Web.Areas.App.Models.CampaignCountries
@model CampaignCountryViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Details")))

<div class="modal-body">
    <div id="CampaignCountryInformationsTab">
        
        <div class="row">

            <div class="col-6 mb-3">
                <h6>(@L("Campaign")) @L("Name") :</h6>
                @Model.CampaignName
            </div>
            <div class="col-6 mb-3">
                <h6>(@L("Country")) @L("Description") :</h6>
                @Model.CountryDescription
            </div>

        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithClose.cshtml")

