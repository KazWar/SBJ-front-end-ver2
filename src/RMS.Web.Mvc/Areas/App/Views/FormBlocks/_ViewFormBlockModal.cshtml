
@using RMS.Web.Areas.App.Models.Common.Modals
@using RMS.Web.Areas.App.Models.FormBlocks
@model FormBlockViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Details")))

<div class="modal-body">
    <div id="FormBlockInformationsTab">
        
        <div class="row">
            <div class="col-6 mb-3">
                <h6>@L("Description") :</h6>
                @Model.FormBlock.Description
            </div>
            <div class="col-6 mb-3">
                <h6>@L("IsPurchaseRegistration") :</h6>
                @Model.FormBlock.IsPurchaseRegistration
            </div>
            <div class="col-6 mb-3">
                <h6>@L("SortOrder") :</h6>
                @Model.FormBlock.SortOrder
            </div>

            <div class="col-6 mb-3">
                <h6>(@L("FormLocale")) @L("Description") :</h6>
                @Model.FormLocaleDescription
            </div>

        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithClose.cshtml")

