@using RMS.Web.Areas.App.Models.Campaigns

@model CreateOrEditCampaignViewModel
@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/Campaigns/CreateOrEdit.js" asp-append-version="true"></script>
}
@section Styles
{
    <link rel="stylesheet" abp-href="/Common/Styles/SBJ/shared.min.css" asp-append-version="true" />
    <link rel="stylesheet" abp-href="/Common/Styles/SBJ/pages.min.css" asp-append-version="true" />
    <link rel="stylesheet" abp-href="/Common/Styles/SBJ/components.min.css" asp-append-version="true" />
    <link href="~/view-resources/Areas/App/Views/Campaigns/CreateOrEdit.css" rel="stylesheet" />
    <link href="~/Common/Styles/SBJ/uncompressed/rmsChat.css" rel="stylesheet" />
}

<div class="kt-content kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">
    <div class="kt-subheader kt-grid__item">
        <div class="@(await GetContainerClass())">
            <div class="kt-subheader__main">
                <h3 class="kt-subheader__title">
                    <span>@(Model.IsEditMode ? (L("EditingCampaign")) : L("CreateNewCampaign"))</span>
                </h3>
                <span class="kt-subheader__separator kt-subheader__separator--v"></span>
                <div class="kt-subheader__breadcrumbs">
                    <a href="/App/Campaigns" class="kt-subheader__breadcrumbs-home"><i class="flaticon2-shelter"></i>&thinsp;@L("Campaigns")</a>
                </div>
            </div>
        </div>
    </div>

    <div class="@(await GetContainerClass()) kt-grid__item kt-grid__item--fluid">
        <div class="kt-portlet kt-portlet--mobile">
            <form name="CampaignInformationsForm" role="form" novalidate class="form-validation">
                <div class="kt-portlet__body">
                    <div id="CampaignInformationsTab">
                        <div style="margin-bottom: 30px">
                            <h4>Campaign Details</h4>
                            <input type="hidden" name="id" value="@Model.Campaign.Id" />
                        </div>

                        @if (!Model.IsEditMode)
                        {
                            <div class="form-group">
                                <label for="CampaignTypeIdList">@L("CampaignType")</label>

                                <select id="CampaignTypeIdList" class="form-control" name="CampaignTypeIdList" required>
                                    @foreach (var item in Model.CampaignTypeViewModelList)
                                    {
                                        <option id="@item.CampaignTypeId" value="@item.CampaignTypeId" data-campaign-campaign-type-id="@item.CampaignCampaignTypeId" data-campaign-id="@item.CampaignId">@item.CampaignTypeName</option>

                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="LocaleIdList">Locale(s) scope</label>

                                <select id="LocaleIdList" class="form-control" name="LocaleIdList" multiple required>
                                    @foreach (var item in Model.SelectableLocales)
                                    {
                                        <option id="@item.Locale.Id" value="@item.Locale.Id">@item.Locale.Description</option>

                                    }
                                </select>
                            </div>
                        }

                        <div class="form-group">
                            <label for="Campaign_CampaignCode">@L("CampaignCode")</label>
                            <input class="form-control m-input" id="Campaign_CampaignCode" value="@Model.Campaign.CampaignCode" type="number" name="campaignCode" required />
                        </div>

                        <div class="form-group">
                            <label for="Campaign_ExternalCode">@L("ExternalCode")</label>
                            <input class="form-control" id="Campaign_ExternalCode" value="@Model.Campaign.ExternalCode" type="text" name="externalCode" required />
                        </div>

                        <div class="form-group">
                            <label for="Campaign_ExternalId">@L("ExternalId")</label>
                            <input class="form-control" id="Campaign_ExternalId" value="@Model.Campaign.ExternalId" type="text" name="externalId" />
                        </div>

                        <div class="form-group">
                            <label for="Campaign_Name">@L("Name")</label>
                            <input class="form-control" id="Campaign_Name" value="@Model.Campaign.Name" type="text" name="name" required />
                        </div>

                        <div class="form-group">
                            <label for="Campaign_Description">@L("Description")</label>
                            <input class="form-control" id="Campaign_Description" value="@Model.Campaign.Description" type="text" name="description" required />
                        </div>

                        <div class="form-group">
                            <label for="Campaign_StartDate">@L("StartDate")</label>
                            <input class="form-control field__datepicker" id="Campaign_StartDate" type="date" name="startDate" value="@Model.Campaign.StartDate.ToString("yyyy-MM-dd")" required />
                        </div>

                        <div class="form-group">
                            <label for="Campaign_EndDate">@L("EndDate")</label>
                            <input class="form-control field__datepicker" id="Campaign_EndDate" type="date" name="endDate" value="@Model.Campaign.EndDate.ToString("yyyy-MM-dd")" required />
                        </div>

                        <div class="form-group">
                            <label for="Campaign_ThumbnailImagePath">@L("ThumbnailImagePath")</label>
                            <input class="form-control" id="Campaign_ThumbnailImagePath" value="@Model.Campaign.ThumbnailImagePath" type="text" name="thumbnailImagePath" />
                        </div>

                        <div class="form-group">
                            <label for="Campaign_BannerImagePath">@L("BannerImagePath")</label>
                            <input class="form-control" id="Campaign_BannerImagePath" value="@Model.Campaign.BannerImagePath" type="text" name="bannerImagePath" />
                        </div>

                        <div class="col">
                            <button type="button" id="saveBtn" class="btn btn-success float-right"><i class="fa fa-save"></i> @L("SaveAndContinue")</button>
                            <button type="button" id="goBackBtn" class="btn btn-secondary float-right mr-3 ml-3">@L("GoBack")</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
