
@using System.Globalization
@using RMS.Web.Areas.App.Models.Common.Modals
@using RMS.Web.Areas.App.Models.PromoSteps
@model CreateOrEditPromoStepModalViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditPromoStep")) : L("CreateNewPromoStep")))

<div class="modal-body">
        <div id="PromoStepInformationsTab">
            <form name="PromoStepInformationsForm" role="form" novalidate class="form-validation">

                @if (Model.IsEditMode)
                {
                    <input type="hidden" name="id" value="@Model.PromoStep.Id" />
                }

				

				
								<div class="form-group">
									<label for="PromoStep_Sequence">@L("Sequence")</label>
									<input class="form-control m-input" id="PromoStep_Sequence" value="@Model.PromoStep.Sequence.ToString(CultureInfo.InvariantCulture)" type="number" name="sequence"  />
								</div>
					
								<div class="form-group">
									<label for="PromoStep_Description">@L("Description")</label>
									<input class="form-control" id="PromoStep_Description" value="@Model.PromoStep.Description" type="text" name="description"     />
								</div>
					

            </form>
        </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
