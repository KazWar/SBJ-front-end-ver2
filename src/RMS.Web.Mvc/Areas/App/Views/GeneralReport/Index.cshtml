@using RMS.Web.Areas.App.Startup
@using RMS.Web.Areas.App.Models.GeneralReports

@model GeneralReportViewModel

@{
    ViewBag.CurrentPageName = AppPageNames.Common.GeneralReports;
}

@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/GeneralReport/Index.js" asp-append-version="true"></script>
}

<div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">

    <div class="kt-subheader kt-grid__item">
        <div class="@(await GetContainerClass())">
            <div class="kt-subheader__main">
                <h3 class="kt-subheader__title">
                    <span>@L("GeneralReport")</span>
                </h3>
            </div>
        </div>
    </div>

    <div class="@(await GetContainerClass()) kt-grid__item kt-grid__item--fluid">
        <div class="kt-portlet kt-portlet--mobile">
            <div class="kt-portlet__body">
                <div class="row align-items-center">
                    <div class="row mb-4">
                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="CampaignDescriptionFilterId">@L("CampaignDescription")</label>
                                <select id="CampaignDescriptionFilterId" class="form-control dropdown"></select>
                            </div>
                            <span class="input-group-btn">
                                <button id="ExportToExcelButton" class="btn btn-outline-success"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>
                            </span>
                        </div>
                        <div class="col-md-6">
                            <label for="StartDateFilterId">@L("StartDate")</label>
                            <label class="float-right" for="EndDateFilterId">@L("EndDate")</label>
                            <div class="input-group">
                                <input class="form-control m-input date-picker" type="text" placeholder="@L("MinValue")" id="StartDateFilterId">
                                <span style="line-height: 40px;padding: 0 15px 0 15px;"> &mdash; </span>
                                <input class="form-control m-input date-picker" type="text" placeholder="@L("MaxValue")" id="EndDateFilterId">
                            </div>
                        </div>
                        <span id="WaitForExportToFinishText" class="col-md-12">@L("WaitForExportToFinish")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>