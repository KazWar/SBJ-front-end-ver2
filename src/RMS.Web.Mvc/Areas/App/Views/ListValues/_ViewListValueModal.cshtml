
@using RMS.Web.Areas.App.Models.Common.Modals
@using RMS.Web.Areas.App.Models.ListValues
@model ListValueViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Details")))

<div class="modal-body">
    <div id="ListValueInformationsTab">
        
        <div class="row">
            <div class="col-6 mb-3">
                <h6>@L("KeyValue") :</h6>
                @Model.ListValue.KeyValue
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Description") :</h6>
                @Model.ListValue.Description
            </div>
            <div class="col-6 mb-3">
                <h6>@L("SortOrder") :</h6>
                @Model.ListValue.SortOrder
            </div>

            <div class="col-6 mb-3">
                <h6>(@L("ValueList")) @L("Description") :</h6>
                @Model.ValueListDescription
            </div>

        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithClose.cshtml")

