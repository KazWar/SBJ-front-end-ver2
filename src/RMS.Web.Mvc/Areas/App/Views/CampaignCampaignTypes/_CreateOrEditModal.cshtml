
@using System.Globalization
@using RMS.Web.Areas.App.Models.Common.Modals
@using RMS.Web.Areas.App.Models.CampaignCampaignTypes
@model CreateOrEditCampaignCampaignTypeModalViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditCampaignCampaignType")) : L("CreateNewCampaignCampaignType")))

<div class="modal-body">
        <div id="CampaignCampaignTypeInformationsTab">
            <form name="CampaignCampaignTypeInformationsForm" role="form" novalidate class="form-validation">

                @if (Model.IsEditMode)
                {
                    <input type="hidden" name="id" value="@Model.CampaignCampaignType.Id" />
                }

				            
						<div class="form-group">
							<label for="campaignId">@L("Campaign")</label>
							@Html.DropDownList("campaignId", new SelectList(Model.CampaignCampaignTypeCampaignList,"Id","DisplayName", (Model.IsEditMode ? Model.CampaignCampaignType.CampaignId.ToString() : "")),@L("SelectACampaign"), new { @class = "form-control"  , @required="required" })
						</div>
            
						<div class="form-group">
							<label for="campaignTypeId">@L("CampaignType")</label>
							@Html.DropDownList("campaignTypeId", new SelectList(Model.CampaignCampaignTypeCampaignTypeList,"Id","DisplayName", (Model.IsEditMode ? Model.CampaignCampaignType.CampaignTypeId.ToString() : "")),@L("SelectACampaignType"), new { @class = "form-control"  , @required="required" })
						</div>


				
								<div class="form-group">
									<label for="CampaignCampaignType_Description">@L("Description")</label>
									<input class="form-control" id="CampaignCampaignType_Description" value="@Model.CampaignCampaignType.Description" type="text" name="description"     />
								</div>
					

            </form>
        </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
