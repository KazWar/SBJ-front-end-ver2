
@using RMS.Web.Areas.App.Models.Common.Modals
@using RMS.Web.Areas.App.Models.CampaignCampaignTypes
@model CampaignCampaignTypeViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Details")))

<div class="modal-body">
    <div id="CampaignCampaignTypeInformationsTab">
        
        <div class="row">
            <div class="col-6 mb-3">
                <h6>@L("Description") :</h6>
                @Model.CampaignCampaignType.Description
            </div>

            <div class="col-6 mb-3">
                <h6>(@L("Campaign")) @L("Description") :</h6>
                @Model.CampaignDescription
            </div>
            <div class="col-6 mb-3">
                <h6>(@L("CampaignType")) @L("Name") :</h6>
                @Model.CampaignTypeName
            </div>

        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithClose.cshtml")

