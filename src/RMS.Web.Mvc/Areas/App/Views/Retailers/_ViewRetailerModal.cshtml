
@using RMS.Web.Areas.App.Models.Common.Modals
@using RMS.Web.Areas.App.Models.Retailers
@model RetailerViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Details")))

<div class="modal-body">
    <div id="RetailerInformationsTab">
        
        <div class="row">
            <div class="col-6 mb-3">
                <h6>@L("Name") :</h6>
                @Model.Retailer.Name
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Code") :</h6>
                @Model.Retailer.Code
            </div>

            <div class="col-6 mb-3">
                <h6>(@L("Country")) @L("CountryCode") :</h6>
                @Model.CountryCountryCode
            </div>

        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithClose.cshtml")

