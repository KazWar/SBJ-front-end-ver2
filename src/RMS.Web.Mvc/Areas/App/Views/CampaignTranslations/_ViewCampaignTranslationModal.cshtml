
@using RMS.Web.Areas.App.Models.Common.Modals
@using RMS.Web.Areas.App.Models.CampaignTranslations
@model CampaignTranslationViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Details")))

<div class="modal-body">
    <div id="CampaignTranslationInformationsTab">
        
        <div class="row">
            <div class="col-6 mb-3">
                <h6>@L("Name") :</h6>
                @Model.CampaignTranslation.Name
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Description") :</h6>
                @Model.CampaignTranslation.Description
            </div>

            <div class="col-6 mb-3">
                <h6>(@L("Campaign")) @L("Name") :</h6>
                @Model.CampaignName
            </div>
            <div class="col-6 mb-3">
                <h6>(@L("Locale")) @L("Description") :</h6>
                @Model.LocaleDescription
            </div>

        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithClose.cshtml")

