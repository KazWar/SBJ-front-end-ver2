@using RMS.Authorization
@using RMS.Web.Areas.App.Models.MessageComponentContents
@using RMS.SBJ.CampaignProcesses.Dtos
@using RMS.Web.Areas.App.Startup
@model MessageComponentContentsViewModel
@{
    ViewBag.CurrentPageName = AppPageNames.Common.MessageComponentContents;
}
@section Styles  {
    <link href="https://cdn.quilljs.com/2.0.0-dev.4/quill.snow.css" rel="stylesheet">
    <link href="https://unpkg.com/quill-table-ui@1.0.5/dist/index.css" rel="stylesheet">
    <link rel="stylesheet" abp-href="/Common/Styles/SBJ/messaging.min.css" asp-append-version="true" />
}
@section Scripts
{
    <script src="https://cdn.quilljs.com/2.0.0-dev.4/quill.js"></script>
    <script src="https://unpkg.com/quill-table-ui@1.0.5/dist/umd/index.js" type="text/javascript"></script>
    <script abp-src="/view-resources/Areas/App/Views/MessageComponentContents/Index.js" asp-append-version="true"></script>
}
<div class="kt-content kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">
    <div class="kt-subheader kt-grid__item">
        <div class="@(await GetContainerClass())">
            <div class="kt-subheader__main">
                <h3 class="kt-subheader__title">
                    <span>@L("MessageComponentContents")</span>
                </h3>
                <span class="kt-subheader__separator kt-subheader__separator--v"></span>
                <span class="kt-subheader__desc">
                    @L("MessageComponentContentsHeaderInfo")
                </span>
            </div>
            <div class="kt-subheader__toolbar">
                <div class="kt-subheader__wrapper">
                    <button id="ExportToExcelButton" class="btn btn-outline-success"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>
                </div>
                <div class="table__heading--right">
                    <button class="btn btn-primary btn__message-component-contents--add">
                        <i class="fa fa-plus"></i> @L("AddNewMessageComponentContent")
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="@(await GetContainerClass()) kt-grid__item kt-grid__item--fluid">
        <div class="kt-portlet kt-portlet--mobile">
            <div class="kt-portlet__body">
                @if (Model.Locales.Count() > 0)
                {
                    <!--Add Localization text-->
                    <label>Locale</label>
                    <select class="campaignMessageLocale">
                        <!--Add Localization text-->
                        <option hidden disabled selected>Select a Locale</option>
                        @foreach (var item in Model.Locales)
                        {
                            <option value="@item.Locale.Id.ToString()" data-localeId="@item.Locale.Id">@item.Locale.Description</option>
                        }
                    </select>
                }
                else
                {
                    <!--Add Localization text-->
                    <label>There are no Campaign Locales currently.</label>
                }
            </div><!-- .kt-portlet.kt-portlet--mobile -->
            <div id="dvMessageComponentContent" style="display: none"></div>
        </div>
    </div>
</div>