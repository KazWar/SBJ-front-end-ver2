
@using System.Globalization
@using RMS.Web.Areas.App.Models.Common.Modals
@using RMS.Web.Areas.App.Models.CampaignCategories
@model CreateOrEditCampaignCategoryModalViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditCampaignCategory")) : L("CreateNewCampaignCategory")))

<div class="modal-body">
        <div id="CampaignCategoryInformationsTab">
            <form name="CampaignCategoryInformationsForm" role="form" novalidate class="form-validation">

                @if (Model.IsEditMode)
                {
                    <input type="hidden" name="id" value="@Model.CampaignCategory.Id" />
                }

				

				
								<div class="form-group">
									<label for="CampaignCategory_Name">@L("Name")</label>
									<input class="form-control" id="CampaignCategory_Name" value="@Model.CampaignCategory.Name" type="text" name="name"  required    />
								</div>
					
								<div class="m-checkbox-list">
									<label for="CampaignCategory_IsActive" class="kt-checkbox">
										<input id="CampaignCategory_IsActive" type="checkbox" name="isActive" value="true" @Html.Raw(Model.CampaignCategory.IsActive ?"checked=\"checked\"":"") />
										@L("IsActive")
										<span></span>
									</label>
								</div>
					
								<div class="form-group">
									<label for="CampaignCategory_SortOrder">@L("SortOrder")</label>
									<input class="form-control m-input" id="CampaignCategory_SortOrder" value="@Model.CampaignCategory.SortOrder.ToString(CultureInfo.InvariantCulture)" type="number" name="sortOrder"  />
								</div>
					

            </form>
        </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
