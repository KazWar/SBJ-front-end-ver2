@using System.Globalization
@using RMS.Web.Areas.App.Models.Common.Modals
@using RMS.Web.Areas.App.Models.FieldTypes
@model CreateOrEditFieldTypeModalViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditFieldType")) : L("CreateNewFieldType")))

<div class="modal-body">
        <div id="FieldTypeInformationsTab">
            <form name="FieldTypeInformationsForm" role="form" novalidate class="form-validation">

                @if (Model.IsEditMode)
                {
                    <input type="hidden" name="id" value="@Model.FieldType.Id" />
                }

				

				
								<div class="form-group">
									<label for="FieldType_Description">@L("Description")</label>
									<input class="form-control" id="FieldType_Description" value="@Model.FieldType.Description" type="text" name="description"     />
								</div>
					

            </form>
        </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
