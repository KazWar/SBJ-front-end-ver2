@model RMS.SBJ.Registrations.Dtos.ProcessRegistration.FormField
@{
    var disableLabel = (bool)ViewData["DisableLabel"];
}

@if (Model.FieldLineId.HasValue)
{
    @if (!disableLabel)
    {
        <label for="@("Line" + Model.FieldType + "__" + Model.FieldLineId.Value.ToString() + Model.FieldId.ToString())">@Model.FieldLabel</label>
    }

    <div class="input-group">
        <div class="input-group-prepend">
            <label class="switch switch__registration-approval">
                <input id="@("LineFieldRejected__" + Model.FieldType + "__" + Model.FieldLineId.Value.ToString() + Model.FieldId.ToString())" type="checkbox" checked="@(!Model.IsRejected)" disabled="@Model.IsReadOnly">
                <span class="slider round"></span>
            </label>
        </div>
        <select id="@("Line" + Model.FieldType + "__" + Model.FieldLineId.Value.ToString() + Model.FieldId.ToString())" 
                type="text" class="form-control field__dropdown-menu" value="@Model.FieldValue" disabled="@Model.IsReadOnly">
            @foreach (var fieldValue in Model.FieldListValues)
            {
                @if (fieldValue.KeyValue == @Model.FieldValue)
                {
                    <option value="@fieldValue.KeyValue" selected>@fieldValue.Description</option>
                }
                else
                {
                    <option value="@fieldValue.KeyValue">@fieldValue.Description</option>
                }
            }
        </select>
    </div>
}
else
{
    @if (!disableLabel)
    {
        <label for="@(Model.FieldType + "__" + Model.FieldId)">@Model.FieldLabel</label>
    }

    <div class="input-group">
        <div class="input-group-prepend">
            <label class="switch switch__registration-approval">
                <input id="@("FieldRejected__" + Model.FieldType + "__" + Model.FieldId)" type="checkbox" checked="@(!Model.IsRejected)" disabled="@Model.IsReadOnly">
                <span class="slider round"></span>
            </label>
        </div>
        <select id="@(Model.FieldType + "__" + Model.FieldId)" type="text" class="form-control field__dropdown-menu" value="@Model.FieldValue" disabled="@Model.IsReadOnly">
            @foreach (var fieldValue in Model.FieldListValues)
            {
                @if (fieldValue.KeyValue == @Model.FieldValue)
                {
                    <option value="@fieldValue.KeyValue" selected>@fieldValue.Description</option>
                }
                else
                {
                    <option value="@fieldValue.KeyValue">@fieldValue.Description</option>
                }
            }
        </select>
    </div>
}
